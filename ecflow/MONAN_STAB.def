suite MONAN_STAB

   edit ECF_HOME "/mnt/beegfs/monan/MONAN-WorkFlow/ecflow"
   edit ECF_HOST "egeon-login1.cptec.inpe.br"
   edit ECF_INCLUDE "/mnt/beegfs/monan/MONAN-WorkFlow/ecflow/includes"
   edit ECF_TRIES "1"

   edit EXP "GFS"
   edit RES "1024002"
   edit FCSTH "240"

   family Manute
      cron 05:00 15:00 00:15

      task verify_model_output
         label Info "Tarefa que verifica quando a etapa 3 do scripts_CD-CT esta completa para iniciar as etapas seguintes.
         event a

   endfamily

   family MONAN_CDCT
         
      task post
         trigger /MONAN_STAB/Manute/verify_model_output:a
         label Info "Tarefa que executa o script 4.run_post.bash de scripts_CD-CT."

      task sanity_check
         label Info "Tarefa que executa o script 5.run_prods.bash de MONAN-Products."
         trigger /MONAN_STAB/MONAN_CDCT/post eq complete

      task copy2ftp
         trigger /MONAN_STAB/MONAN_CDCT/sanity_check eq complete
         edit NDAYSKEEP 180
         label Info "Tarefa que faz a copia das figuras geradas pelo sanitycheck para area de FTP."

   endfamily
   
endsuite
